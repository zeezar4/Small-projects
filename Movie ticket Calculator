def Movie_Cost(Adult,Child,Military):

    ATC = Adult * 13.69
    CTC = Child * 10.69
    MTC = Military * 12.69
    
    TBT = ATC+CTC+MTC
    
    Tax = TBT * .0825
    
    TC = Tax+TBT
    print (TC)
    
